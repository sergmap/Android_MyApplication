<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#4CC7D8"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Логин:"
            android:id="@+id/tvLoginLabel"
            android:textColor="#2C2424"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите логин пользователя"
            android:ems="10"
            android:id="@+id/edlogin"
            android:inputType="textPersonName"
            android:layout_below="@+id/tvLoginLabel"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:background="@drawable/edittextstyle"


    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvEmpNameLabel"
            android:layout_below="@+id/edlogin"
            android:gravity="center"
            android:text="ttt"
            android:textColor="#FF0000"
            style="@style/Widget.AppCompat.TextView"
            app:fontFamily="sans-serif"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароль:"
            android:id="@+id/tvPasswordLabel"
            android:layout_below="@+id/tvEmpNameLabel"
            android:textColor="#2C2424"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите пароль"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edPassword"
            android:layout_below="@+id/tvPasswordLabel"
            android:gravity="center"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Склад:"
            android:id="@+id/tvStockLabel"
            android:layout_below="@+id/edPassword"
            android:textColor="#2C2424"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите номер склада"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edStock"
            android:layout_below="@+id/tvStockLabel"
            android:gravity="center"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="10dp"/>

    <Button
            android:id="@+id/button"
            android:text="Подключиться"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/edStock"
            android:layout_marginTop="80sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:backgroundTint="#326C77" app:rippleColor="#2196F3" app:cornerRadius="5dp" app:elevation="5dp"/>


</RelativeLayout>